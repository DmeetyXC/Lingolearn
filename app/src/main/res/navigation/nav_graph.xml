<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/nav_graph"
        app:startDestination="@id/book_fragment">

    <fragment
            android:id="@+id/book_fragment"
            android:name="com.dmitriybakunovich.languagelearning.ui.book.BookFragment"
            android:label="book_fragment"
            tools:layout="@layout/book_fragment">
        <action
                android:id="@+id/action_bookFragment_to_textContainerActivity"
                app:destination="@id/text_container_activity" />
        <action
                android:id="@+id/action_bookFragment_to_dictionaryFragment"
                app:destination="@id/dictionary_fragment" />
        <action
                android:id="@+id/action_bookFragment_to_favoriteFragment"
                app:destination="@id/favorite_fragment" />
        <action
                android:id="@+id/action_bookFragment_to_choiceLanguageFragment"
                app:destination="@id/choice_language_fragment"
                app:launchSingleTop="true"
                app:popUpTo="@id/nav_graph"
                app:popUpToInclusive="true" />
        <action
                android:id="@+id/action_bookFragment_to_settingsFragment"
                app:destination="@id/settings_fragment" />
    </fragment>
    <activity
            android:id="@+id/text_container_activity"
            android:name="com.dmitriybakunovich.languagelearning.ui.text.TextContainerActivity"
            android:label="activity_text_container"
            tools:layout="@layout/activity_text_container">
        <argument
                android:name="book"
                app:argType="com.dmitriybakunovich.languagelearning.data.entity.BookData" />
    </activity>
    <fragment
            android:id="@+id/dictionary_fragment"
            android:name="com.dmitriybakunovich.languagelearning.ui.dictionary.DictionaryFragment"
            android:label="dictionary_fragment"
            tools:layout="@layout/dictionary_fragment" />
    <fragment
            android:id="@+id/favorite_fragment"
            android:name="com.dmitriybakunovich.languagelearning.ui.favorite.FavoriteFragment"
            android:label="favorite_fragment"
            tools:layout="@layout/favorite_fragment">
        <action
                android:id="@+id/action_favoriteFragment_to_textContainerActivity"
                app:destination="@id/text_container_activity" />
    </fragment>
    <fragment
            android:id="@+id/choice_language_fragment"
            android:name="com.dmitriybakunovich.languagelearning.ui.choiceLanguage.ChoiceLanguageFragment"
            android:label="choice_language_fragment"
            tools:layout="@layout/choice_language_fragment">
        <action
                android:id="@+id/action_choiceLanguageFragment_to_bookFragment"
                app:destination="@id/book_fragment"
                app:launchSingleTop="true"
                app:popUpTo="@id/nav_graph"
                app:popUpToInclusive="true" />
    </fragment>
    <fragment
            android:id="@+id/settings_fragment"
            android:name="com.dmitriybakunovich.languagelearning.ui.settings.SettingsFragment"
            android:label="settings_fragment" />
</navigation>