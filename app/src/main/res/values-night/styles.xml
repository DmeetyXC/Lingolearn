<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccentNight</item>

        <item name="colorDivider">@color/colorDividerLight</item>
        <item name="android:statusBarColor">@android:color/black</item>
    </style>

    <style name="AppBarOverlay" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="elevation">4dp</item>
    </style>

    <style name="PopupOverlay" parent="Theme.MaterialComponents.DayNight" />

    <style name="BottomNavigationView">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

</resources>
