<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent_night</item>

        <item name="colorDivider">@color/color_divider_light</item>
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="preferenceTheme">@style/AppThemeNoActionBar.PreferenceThemeOverlay</item>
    </style>

    <style name="AppBarOverlay" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="elevation">4dp</item>
    </style>

    <style name="PopupOverlay" parent="Theme.MaterialComponents.DayNight" />

    <style name="BottomNavigationView">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

</resources>
