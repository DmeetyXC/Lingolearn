<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <TextView
            android:id="@+id/nameBookFavorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/imageBookFavorite"
            app:layout_constraintTop_toBottomOf="@+id/imageBookFavorite"
            tools:text="Book" />

    <ImageView
            android:id="@+id/imageBookFavorite"
            android:layout_width="146dp"
            android:layout_height="196dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/title_library"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_menu_gallery" />

    <TextView
            android:id="@+id/progressBookFavorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:layout_constraintStart_toStartOf="@+id/nameBookFavorite"
            app:layout_constraintTop_toBottomOf="@+id/nameBookFavorite"
            tools:text="0%" />

</androidx.constraintlayout.widget.ConstraintLayout>