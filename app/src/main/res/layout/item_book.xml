<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp">

    <TextView
            android:id="@+id/nameBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageBook"
            tools:text="Book" />

    <ImageView
            android:id="@+id/imageBook"
            android:layout_width="106dp"
            android:layout_height="146dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/title_library"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_menu_gallery" />

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nameBook">

        <TextView
                android:id="@+id/progressBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                tools:text="0%" />

        <ImageView
                android:id="@+id/favoriteBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="0"
                android:contentDescription="@string/title_favorite"
                app:srcCompat="@drawable/ic_baseline_favorite_not" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>